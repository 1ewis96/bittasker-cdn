{
  "swagger": "2.0",
  "info": {
    "title": "BitTasker API",
    "description": "API documentation for the BitTasker platform.",
    "version": "1.0.0"
  },
  "basePath": "/api",
  "paths": {
    "/auth/login": {
      "post": {
        "summary": "Authenticate user",
        "parameters": [
          {
            "name": "username",
            "in": "body",
            "description": "User's email",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "password",
            "in": "body",
            "description": "User's password",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully authenticated"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    },
    "/users": {
      "get": {
        "summary": "Get users list",
        "responses": {
          "200": {
            "description": "List of users",
            "schema": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "integer"
                  },
                  "name": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
